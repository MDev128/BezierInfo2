    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-register": "^6.4.3",
    "bezier-js": "^2.0.0",
    "block-loader": "^2.0.0",
    "chroma-js": "^1.1.1",
    "cross-env": "^3.1.4",
    "css-loader": "^0.23.0",
    "eslint": "^1.10.3",
    "eslint-loader": "^1.6.0",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.8.5",
    "fs-extra": "^0.26.7",
    "history": "^1.17.0",
    "html-entities": "^1.2.0",
    "image-size": "^0.4.0",
